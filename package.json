{
  "name": "beads-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "all": "npm run lint && npm run typecheck && npm test && npm run format:check",
    "start": "node server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --ext .js .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^5.0.3",
    "@types/node": "^22.7.4",
    "@types/ws": "^8.18.1",
    "eslint": "^9.11.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.10.2",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-promise": "^6.1.1",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {
    "esbuild": "^0.25.11",
    "express": "^5.1.0",
    "lit-html": "^3.3.1",
    "ws": "^8.18.3"
  }
}
