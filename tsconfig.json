{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "app/**/*.js",
    "bin/**/*.js",
    "server/**/*.js",
    "scripts/**/*.js",
    "test/**/*.js",
    "vitest.config.mjs"
  ],
  "exclude": ["app/main.bundle.js", "app/main.bundle.js.map"]
}
